<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".viewcontainers.MainContainer"
	android:background="#F0F0F0" >

	<Button
		android:id="@+id/btn_play"
		android:backgroundTint="#375B28"
		android:textColor="#F0F0F0"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:text="play"
		/>

	<Button
		android:id="@+id/btn_stop"
		android:backgroundTint="#375B28"
		android:textColor="#F0F0F0"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/btn_play"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="16dp"
		android:text="stop"
		/>

	<Button
		android:id="@+id/btn_increase_frequency"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#F0F0F0"
		android:text="increase"
		android:backgroundTint="#6CAA52"
		app:layout_constraintTop_toBottomOf="@+id/btn_stop"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginTop="16dp" />

	<Button
		android:id="@+id/btn_decrease_frequency"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#F0F0F0"
		android:backgroundTint="#6CAA52"
		android:text="decrease"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/btn_increase_frequency"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/btn_playback_mode"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#F0F0F0"
		android:backgroundTint="#6CAA52"
		android:text="switch mode"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/btn_decrease_frequency"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<fragment
		app:layout_constraintTop_toTopOf="parent"
		android:layout_width="300dp"
		android:layout_height="20dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/btn_play" >

	</fragment >

</androidx.constraintlayout.widget.ConstraintLayout >